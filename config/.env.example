# ============================================
# Environment Configuration Template
# ============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# Application Settings
APP_NAME=Vehicle-Price-Prediction
APP_VERSION=2.0.0
ENVIRONMENT=development  # development, staging, production
DEBUG=True

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=True

# Streamlit Settings
STREAMLIT_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# Model Settings
MODEL_PATH=models/best_model.pkl
PREPROCESSOR_PATH=outputs/preprocessor.joblib
MODEL_VERSION=2.0.0

# Data Paths
DATA_DIR=dataset/
OUTPUT_DIR=outputs/
MODELS_DIR=models/

# Database (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/vehicle_db
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10

# Redis Cache (optional)
# REDIS_URL=redis://localhost:6379/0
# CACHE_TTL=3600

# Security
SECRET_KEY=your-secret-key-here-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
LOG_FILE=logs/app.log

# Monitoring (Prometheus)
METRICS_ENABLED=True
METRICS_PORT=9090

# MLflow Tracking (optional)
# MLFLOW_TRACKING_URI=http://localhost:5000
# MLFLOW_EXPERIMENT_NAME=vehicle-price-prediction

# AWS Settings (if deploying to AWS)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET_NAME=vehicle-models

# Azure Settings (if deploying to Azure)
# AZURE_STORAGE_CONNECTION_STRING=your-connection-string
# AZURE_STORAGE_CONTAINER=models

# Sentry (Error Tracking)
# SENTRY_DSN=https://your-sentry-dsn
# SENTRY_ENVIRONMENT=production

# Feature Flags
ENABLE_BATCH_PREDICTIONS=True
ENABLE_MODEL_EXPLANATIONS=True
ENABLE_PERFORMANCE_MONITORING=True

# Training Settings
TRAINING_RANDOM_STATE=42
TRAINING_N_ITER=25
TRAINING_CV_FOLDS=3
TRAINING_USE_GPU=False

# Email Notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
# NOTIFICATION_EMAIL=admin@example.com

# Slack Notifications (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
